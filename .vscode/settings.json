{
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.acceptSuggestionOnEnter": "off"
  },
  "[json], [yaml]": {
    "editor.tabSize": 2
  },
  "files.autoSave": "onWindowChange",
  "files.encoding": "utf8",
  "editor.formatOnSave": true,
